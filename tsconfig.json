{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "exactOptionalPropertyTypes": false,
    "strictNullChecks": false,
    "lib": ["ESNext"],
    "target": "ESNext"
  },
  "include": ["src", "index.ts", ".prettierrc.cjs"]
}
